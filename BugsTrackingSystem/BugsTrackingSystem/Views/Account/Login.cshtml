@using BugsTrackingSystem.Models
@model LoginViewModel


@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/scripts.js")

<body class="top loginPage">
<div class="container">
    <div class="text-center">
        <img src="~/images/logo-vertical.png">
    </div>

    <div class="top-buffer row">
        <div class="text-center">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-validation" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-validation" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-validation" })
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control authInput", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-2">
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control authInput", @placeholder = "Password"})
                        </div>
                    </div>
                    <div class="col-md-8 col-md-offset-2">
                        <ul class="list-inline">
                            <li>
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new {@class = "remember"})
                                </div>
                            </li>
                            <li>
                                <div>
                                    @Html.ActionLink("Forgot password", "ForgotPassword", "Account", new {@class = "forgotPass"})
                                </div>
                            </li>
                        </ul>
                    </div>
                    <br>
                    <div class="top">
                        <input type="submit" value="Login" class="btn btn-default"/>
                    </div>
                        }
            </section>
        </div>
    </div>
</div>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}