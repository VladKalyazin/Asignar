@using BugsTrackingSystem.Helpers
@model BugsTrackingSystem.Models.FiltersPageViewModel

@{
    ViewBag.Title = "Filters";

    
}

<div class="container">
    <div class="col-md-12 col-xs-12">
        <ul class="list-inline">
            <li>
                <h1>
                    <b>Filters</b>
                </h1>
            </li>
            <li>

                <div id="add_filter">
                    @using (Html.BeginForm("Filters", "Manage", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Name", null, "", new {@class = "form-control projInput", placeholder = "Filter Name", required = true})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Search", null, "", new {@class = "form-control projInput", placeholder = "Search", required = true})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-5" style="margin-left: 50px;">
                                    @Html.DropDownList("Priority", Model.Select.Priority, new {@class = "btnDropTask selectpicker", placeholder = "Priority", multiple = "multiple" })
                                </div>
                                <div class="col-xs-5" style="margin-left: 20px;">
                                    @Html.DropDownList("Status", Model.Select.Status, new {@class = "btnDropTask selectpicker", placeholder = "Status", multiple = "multiple" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-5" style="margin-left: 50px;">
                                    @Html.DropDownList("Project", Model.Select.Projects, new {@class = "btnDropTask selectpicker", placeholder = "Project", multiple = "multiple" })
                                </div>
                                <div class="col-xs-5" style="margin-left: 20px;">
                                    @Html.DropDownList("Assignee", Model.Select.Users, new {@class = "btnDropTask selectpicker", placeholder = "Assignee", multiple = "multiple" })
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn-pop btn-default" vlaue="Create"/>
                        </div>
                    }
                </div>
                <i id="open_filter" class="fa fa-plus taskIcon projPlus" aria-hidden="true"></i>
            </li>
            <li style="float: right !important">
                <div>
                    @using (Html.BeginForm("", "", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        <div class="input-append">
                            <input type="text" class="form-control search_field" placeholder="Search"/>
                            <button type="submit" class="search_btn">
                                <i class="fa fa-search search_icon"></i>
                            </button>
                        </div>
                    }
                </div>
            </li>
        </ul>

        <div class="text-right col-md-12 col-xs-12" style="float: right !important; margin-top: 10px">
            @Html.PageLinks(Model.PageInfo, x => Url.Action("Filters", new { page = x }))
        </div>

        @foreach(var filter in Model.FilterInfo)
        { 
        <div class="col-md-3 col-xs-6 MyFilters">
            <h3 class="projName" style="margin-left: 30px;">@filter.Title</h3>
            <ul class="icons filtersStat" style="list-style-type: none">
                <li>
                    <span class="projText">Search:</span>
                    <span>@filter.Search</span>
                </li>
                <li>
                    <span class="projText">Status:</span>
                    <span>@string.Join(", ", filter.Statuses)</span>
                </li>
                <li>
                    <span class="projText">Priority:</span>
                    <span>@string.Join(", ", filter.Priorities)</span>
                </li>
                <li>
                    <span class="projText">Project:</span>
                    <span>@string.Join(", ", filter.Projects)</span>
                </li>
                <li>
                    <span class="projText">Assignee:</span>
                    <span>@string.Join(", ", filter.Users)</span>
                </li>
            </ul>
        </div>
        }
        
    </div>
</div>

@if (Model.FilterInfo != null && (Model.FilterInfo.Count() > 0))
{
    <div class="container">
        <div class="col-xs-6">
            <br>
            <p>
                <i class="fa fa-filter underContent" aria-hidden="true"> Filters: @Model.FilterInfo.Count()</i>
            </p>
        </div>
    </div>
}