
@{
    ViewBag.Title = "Filters";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var projects = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "project1",
            Value = "0"
        },
        new SelectListItem
        {
            Text = "project2",
            Value = "1"
        }
    };

    var users = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "user1",
            Value = "0"
        },
        new SelectListItem
        {
            Text = "user2",
            Value = "1"
        }
    };

    var priority = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "Minor",
            Value = "0"
        },
        new SelectListItem
        {
            Text = "Major",
            Value = "1"
        }
    };

    var status = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "To do",
            Value = "0",
            Selected = true
        },
        new SelectListItem
        {
            Text = "Done",
            Value = "1"
        },
        new SelectListItem
        {
            Text = "In Process",
            Value = "2"
        }
    };

    var sorting = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "Project",
            Value = "Project"
        },
        new SelectListItem
        {
            Text = "Priority",
            Value = "Priority"
        },
        new SelectListItem
        {
            Text = "Assignee",
            Value = "Assignee"
        },
        new SelectListItem
        {
            Text = "Status",
            Value = "Status"
        }
    };
}

<div class="container">
    <div class="col-md-12 col-xs-12">
        <ul class="list-inline">
            <li>
                <h1>
                    <b>Filters</b>
                </h1>
            </li>
            <li>

                <div id="add_filter" title="Create new project">
                    @using (Html.BeginForm("Project", "Manage", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Name", null, "", htmlAttributes: new {@class = "form-control projInput", placeholder = "Filter Name", required = true})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Search", null, "", htmlAttributes: new {@class = "form-control projInput", placeholder = "Search", required = true})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-5">
                                    @Html.DropDownList("Priority", priority, new {@class = "btnDropTask", placeholder = "Priority"})
                                </div>
                                <div class="col-xs-5">
                                    @Html.DropDownList("Status", status, new {@class = "btnDropTask", placeholder = "Status"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-5">
                                    @Html.DropDownList("Project", projects, new {@class = "btnDropTask", placeholder = "Project"})
                                </div>
                                <div class="col-xs-5">
                                    @Html.DropDownList("Assignee", users, new {@class = "btnDropTask", placeholder = "Assignee"})
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn-pop btn-default" vlaue="Create"/>
                        </div>
                    }
                </div>
                <i id="open_filter" class="fa fa-plus taskIcon projPlus" aria-hidden="true"></i>
            </li>
            <li style="float: right !important">
                <div>
                    @using (Html.BeginForm("", "", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        <div class="input-append">
                            <input type="text" class="form-control search_field" placeholder="Search"/>
                            <button type="submit" class="search_btn">
                                <i class="fa fa-search search_icon"></i>
                            </button>
                        </div>
                    }
                    @Html.ActionLink("Advanced search", "", "", new {@class = "search_link", style = "float: right !important"})
                </div>
            </li>
        </ul>

        <ul class="list-inline" style="margin-top: 30px">
            <li>
                <div class="col-md-12 col-xs-12">
                    <ul class="list-inline">
                        <li>
                            <span class="sort_by"><b>Sort by: </b></span>
                        </li>
                        <li>
                            @using (Html.BeginForm("", "", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.DropDownList("drop-down", sorting, "Select", new { @class = "dropdown_sorting", onchange = "this.form.submit()" })
                            }
                        </li>
                    </ul>
                </div>
            </li>
            <li style="float: right !important">
                <div class="text-right col-md-12 col-xs-12">
                    @*@Html.PageLinks(Model.PageInfo, x => Url.Action("Filters", new { page = x }))*@
                </div>
            </li>
        </ul>

