@using AsignarDBEntities
@using Microsoft.Data.OData.Query.SemanticAst
@model BugsTrackingSystem.Models.ProjectsViewModel

@{
    ViewBag.Title = "Projects";
}

<div class="container">
    <div class="col-md-12 col-xs-12">
        <ul class="list-inline">
            <li>
                <h1>
                    <b>Projects</b>
                </h1>
            </li>
            <li>
                <div id="add_project" title="Create new project" class="popUpTitle">
                    @using (Html.BeginForm("Projects", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Title", null, "", htmlAttributes: new { @class = "form-control projInput1", placeholder = "Title" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-5">
                                    @Html.TextBox("Key", null, "", htmlAttributes: new {@class = "form-control projInput2", placeholder = "Key"})
                                </div>
                                <div class="col-xs-5">
                                    <span class="popUpText">Three letters for description</span>
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn-pop btn-default" vlaue="Create" />
                        </div>
                    }
                </div>
                <i id="opener" class="fa fa-plus-circle projPlus" aria-hidden="true"></i>
            </li>
        </ul>

        @foreach (var project in Model)
        {
            <a href="/Manage/Project" class="projectsPage">
                <div class="col-md-3 col-xs-6 MyProjects">
                    <h3 class="projName">@project.Name</h3>
                    <p class="projPref">@project.Prefix</p>
                    <div class="text-right">
                        <ul class="list-inline icons">
                            <li>
                                <i class="fa fa-pencil-square-o" aria-hidden="true"> 0</i>
                            </li>
                            <li>
                                <i class="fa fa-users" aria-hidden="true"> @project.UsersCount</i>
                            </li>
                        </ul>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
<div class="container">
    <div class="col-xs-6">
        <br>
        <p><i class="underContent fa fa-th-list" aria-hidden="true"> @Html.Encode(Model.Count())</i>
        </p>
    </div>
</div>
