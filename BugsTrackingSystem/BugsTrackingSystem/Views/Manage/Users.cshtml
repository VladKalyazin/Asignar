@using System.Web.Mvc.Html
@model List<BugsTrackingSystem.Models.UserSimpleViewModel>

@{
    ViewBag.Title = "Users";

    var roles = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "Admin",
            Value = "0"
        },
        new SelectListItem
        {
            Text = "Common User",
            Value = "1",
            Selected = true
        }
    };
}


<div class="container">
    <div class="col-md-12 col-xs-12">
        <ul class="list-inline">
            <li>
                <h1><b>Users</b>
                </h1>
            </li>
            <li>
                <div id="add_user" class="popUpTitle">
                    @using (Html.BeginForm("AddUser", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-validation" })
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-4">
                                    @Html.TextBox("FirstName", null, "", htmlAttributes: new {@class = "form-control projInput", placeholder = "Name"})
                                </div>
                                <div class="col-xs-6">
                                    @Html.TextBox("Surname", null, "", htmlAttributes: new { @class = "form-control projInput", placeholder = "Surname" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Email", null, "", htmlAttributes: new {@class = "form-control projInput", placeholder = "Email"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-3">
                                    @Html.Password("Password", new {@class = "form-control projInput", placeholder = "Password" })
                                </div>
                                <div class="col-xs-3">
                                    @Html.Password("ConfirmPassword", new {@class = "form-control projInput", placeholder = "Confirm Password" })
                                </div>
                                <div class="col-xs-3">
                                    @Html.DropDownList("Role", roles, new { @class = "btnDropRole" })
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn-pop btn-default" value="Create"/>
                        </div>
                    }
                </div>
                <i id="open_user" class="fa fa-plus taskIcon projPlus" aria-hidden="true"></i>
            </li>
        </ul>

        @foreach (var user in Model.ToArray())
        {
            <a href="@Url.Action("UserProfile", "Manage")" class="projectsPage">
                <div class="col-md-3 col-xs-6 MyProjects">
                    <div class="col-md-3">
                        <img class="img-circle" src="@user.UserPhoto" width="50" height="50"/>
                    </div>
                    <div class="col-md-8">
                        <span>@user.FirstName @user.Surname</span><br>
                        <span>@user.Email</span>
                    </div>
                    <br><br><br>
                    <div class="col-md-3">
                        <h5><span class="project_progress">Me</span></h5>
                    </div>
                    <div class="text-right">
                        <ul class="list-inline icons">
                            <li>
                                <i class="fa fa-pencil-square-o" aria-hidden="true"> @user.DefectsCount</i>
                            </li>
                            <li>
                                <i class="fa fa-list" aria-hidden="true"> @user.ProjectsCount</i>
                            </li>
                        </ul>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

<div class="container">
    <div class="col-xs-6">
        <br>
        <p>
            <i class="fa fa-users underContent" aria-hidden="true"> Users: @Html.Encode(Model.Count)</i>
        </p>
    </div>
</div>