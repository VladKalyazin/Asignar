@using System.Web.Mvc.Html
@using BugsTrackingSystem.Helpers
@model BugsTrackingSystem.Models.IndexViewModel

@{
    ViewBag.Title = "Users";
}


<div class="container">
    <div class="col-md-12 col-xs-12">
        <ul class="list-inline">
            <li>
                <h1><b>Users</b>
                </h1>
            </li>
            <li>
                <div id="add_user" class="popUpTitle">
                    @using (Html.BeginForm("AddUser", "Manage", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        @Html.ValidationSummary(true, "", new {@class = "text-validation"})
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-4">
                                    @Html.TextBox("FirstName", null, "", htmlAttributes: new {@class = "form-control projInput", @placeholder = "Name"})
                                </div>
                                <div class="col-xs-6">
                                    @Html.TextBox("Surname", null, "", htmlAttributes: new {@class = "form-control projInput", @placeholder = "Surname"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-10">
                                    @Html.TextBox("Email", null, "", htmlAttributes: new {@class = "form-control projInput", @placeholder = "Email"})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-3">
                                    @Html.TextBox("Password", null, "", htmlAttributes: new {@class = "form-control projInput", @placeholder = "Password"})
                                </div>
                                <div class="col-xs-3">
                                    @Html.TextBox("ConfirmPassword", null, "", htmlAttributes: new {@class = "form-control projInput", @placeholder = "Confirm Password"})
                                </div>
                                <div class="col-xs-3">
                                    @Html.DropDownList("Role", Model.Roles, new {@class = "btnDropRole"})
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" class="btn-pop btn-default" value="Create"/>
                        </div>
                    }
                </div>
                <i id="open_user" class="fa fa-plus taskIcon projPlus" aria-hidden="true"></i>
            </li>
            <li style="float: right !important">
                <div>
                    @using (Html.BeginForm("", "", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="input-append">
                            <input type="text" class="form-control search_field" placeholder="Search" />
                            <button type="submit" class="search_btn">
                                <i class="fa fa-search search_icon"></i>
                            </button>
                        </div>
                    }
                    <a href="@Url.Action("Search", "Manage")" class="search_link" style="float: right !important">Advanced search</a>
                </div>
            </li>
        </ul>

        <div class="text-right col-md-12 col-xs-12"style="float: right !important">
            @Html.PageLinks(Model.PageInfo, x => Url.Action("Users", new { page = x }))
        </div>
        
        @foreach (var user in Model.Users)
        {
            <a href="@Url.Action("Profile", "Manage")" class="projectsPage">
                <div class="col-md-3 col-xs-6 MyProjects">
                    <ul class="list-inline">
                        <li>
                            <img class="img-circle" src="@user.UserPhoto" width="50" height="50" style="margin-top: -10px;" />
                        </li>
                        <li>
                            <span>@user.FirstName @user.Surname</span><br>
                            <span>@user.Email</span>
                        </li>
                    </ul>
                    


                    <ul class="list-inline icons">
                        <li style="margin-top: -15px; margin-left: -15px">
                            @if (user.Role == "Admin")
                            {
                                <h5><span class="project_todo">Admin</span></h5>
                            }
                            @*if ()
                            {
                                <h5><span class="project_progress">Me</span></h5>
                            }*@
                        </li>
                        <li style="float: right !important">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"> @user.DefectsCount</i>
                        </li>
                        <li style="float: right !important">
                            <i class="fa fa-list" aria-hidden="true"> @user.ProjectsCount</i>
                        </li>
                    </ul>
                </div>
            </a>
        }
    </div>
</div>

<div class="container">
    <div class="col-xs-12">
        <br>
        <p>
            <i class="fa fa-users underContent" aria-hidden="true"> Users: @Html.Encode(Model.PageInfo.TotalItems)</i>
        </p>
    </div>
</div>