@model BugsTrackingSystem.Models.NewDefectViewModel

<div id="download_attachments">
    @using (Html.BeginForm("AddNewAttachments", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <div id="multiple" style="margin-left: 20px;">
            <input type="file" class="multiple" name="files" multiple />
        </div>
        <div class="text-right">
            <input type="submit" class="btn-pop btn-default" value="Save" />
        </div>
    }
</div>


<div id="add_task" title="Create new project">
    @using (Html.BeginForm("AddNewTask", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "form_new_task", onsubmit = "return validate_new_task()" }))
            {
        <p id="validation_new_task" style="color: Red; text-align: center;"></p>
        <div class="row">
            <div class="form-group">
                <div class="col-xs-10">
                    @Html.TextBox("Name", null, "", new { @class = "form-control projInput", placeholder = "Task name", required = true })
                </div>
            </div>
            <div class="form-group" style="margin-left: 35px;">
                <div class="col-xs-5">
                    @Html.DropDownList("Project", Model.Projects, new { @class = "btnDropTask selectpicker", placeholder = "Project", id = "projectSelect" })
                </div>
                <div class="col-xs-5" style="margin-left: 35px;">
                    @Html.DropDownList("Owner", Model.Users, new { @class = "btnDropTask selectpicker", placeholder = "Owner", id = "userSelect" })
                </div>
            </div>
            <div class="form-group" style="margin-left: 35px;">
                <div class="col-xs-5">
                    @Html.DropDownList("Priority", Model.Priority, new { @class = "btnDropTask selectpicker", placeholder = "Priority" })
                </div>
                <div class="col-xs-5" style="margin-left: 35px;">
                    @Html.DropDownList("Status", Model.Status, new { @class = "btnDropTask selectpicker", placeholder = "Status" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-10">
                    @Html.TextArea("Description", new { rows = 5, @class = "form-control descInput", placeholder = "Description", required = true })
                </div>
            </div>
            <hr style="width: 500px">
            <div class="attachments">
                @Html.Label("Attachments")
                <i id="open_add_attachments" class="fa fa-plus-circle circle_attach" aria-hidden="true"></i>
            </div>
        </div>
        <div class="text-right">
            <input type="submit" class="btn-pop btn-default" value="Create" />
        </div>
    }
</div>