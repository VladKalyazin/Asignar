@model BugsTrackingSystem.Models.UserSimpleViewModel

<div class="userMenuInfo">
    <ul class="list-inline" data-toggle="dropdown" type="button">
        <li>
            <img class="img-circle" src="@Model.UserPhoto" width="30" height="30" />
        </li>
        <li>
            <p id="profileName">@Model.FirstName @Model.Surname</p>
        </li>
    </ul>
    <ul class="dropdown-menu">
        <li>
            <a href=@Url.Action("Profile", "Manage", new { userId = Model.UserId}) style="color: #E7F1F0; padding-top: 7px" class="drop_profile">Profile</a>
        </li>
        <li>
            <a href=@Url.Action("Logout", "Account") style="color: #E7F1F0; padding-top: 7px" class="drop_profile">Sign out</a>
        </li>
    </ul>
</div>
