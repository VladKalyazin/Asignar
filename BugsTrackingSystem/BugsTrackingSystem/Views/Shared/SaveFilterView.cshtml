@model BugsTrackingSystem.Models.FilterSimpleViewModel

<div id="save_filter">
    @using (Html.BeginForm("AddNewFilter", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="row">
            <div class="form-group">
                <div class="col-xs-10">
                    @Html.TextBox("Name", null, "", new { @class = "form-control projInput", placeholder = "Filter Name", required = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-10">
                    @Html.TextBox("Search", null, "", new { @class = "form-control projInput", placeholder = "Search", required = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-5" style="margin-left: 50px;">
                    @Html.DropDownList("Priorities", null , new { @class = "btnDropTask selectpicker", placeholder = "Priority", disabled = "disabled", multiple = "multiple" })
                </div>
                <div class="col-xs-5" style="margin-left: 20px;">
                    @Html.DropDownList("Statuses", null, new { @class = "btnDropTask selectpicker", placeholder = "Status", disabled = "disabled", multiple = "multiple" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-5" style="margin-left: 50px;">
                    @Html.DropDownList("Projects", null, new { @class = "btnDropTask selectpicker", placeholder = "Project", disabled = "disabled", multiple = "multiple" })
                </div>
                <div class="col-xs-5" style="margin-left: 20px;">
                    @Html.DropDownList("Assignees", null, new { @class = "btnDropTask selectpicker", placeholder = "Assignee", disabled = "disabled", multiple = "multiple" })
                </div>
            </div>
        </div>
        <div class="text-right">
            <input type="submit" class="btn-pop btn-default" value="Save" />
        </div>
    }
</div>